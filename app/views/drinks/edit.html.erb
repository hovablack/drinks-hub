<h1>Insert the form to edit an instance of your model here.</h1>

<form action="/drinks/<%= @drink.id %>" method="POST">
    <input type="hidden" name="_method" value="PATCH">
    <p>
        <label for="drink_name">Drink Name</label>
        <input type="text" id="drink_name" name="name" value="<%= @drink.name %>">
    </p>

    <p>
        <label for="drink_quantity">No. of Drink(s)</label>
        <input type="text" id="drink_quantity" name="quantity" value="<%= @drink.quantity %>">
    </p>

    <p>
        <label for="drink_category">Category</label>
        <select class=" "id="drink_category" name="category">
            <option value="Alcoholic">Alcoholic</option>
            <option value="Non-Alcoholic">Non-Alcoholic</option>
        </select>
    </p>

    <a href="/drinks/<%= @drink.id %>">Cancel</a>
    <input type="submit" value="Edit Order">
</form>